<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

<div id="shop-ai-chat-container" class="{{ block.settings.chat_integration_type }}">
  <div class="shop-ai-chat-widget" style="background-color: {{ block.settings.chat_widget_color }}">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
    </svg>
  </div>

  <div class="shop-ai-chat-window">
    <div class="shop-ai-chat-header">
      <div>{{ 'chat.title' | t }}</div>
      <button class="shop-ai-chat-close">âœ•</button>
    </div>

    <div class="shop-ai-chat-messages">
      <!-- Messages will be added here by JavaScript -->
    </div>

    <div class="shop-ai-chat-input">
      <input type="text" placeholder="{{ 'chat.inputPlaceholder' | t }}">
      <button class="shop-ai-chat-send">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </button>
    </div>
  </div>
</div>

<script src="{{ 'chat.js' | asset_url }}" defer></script>
<script>
  window.shopChatConfig = {
    welcomeMessage: "{{ 'chat.welcomeMessage' | t }}",
    backendUrl: "https://esquad-backend-106121245730.northamerica-northeast1.run.app",
    env: "{{block.settings.env}}"
  };
  window.shopId = {{ shop.id }};
  const chatIntegrationType = "{{ block.settings.chat_integration_type }}";

  document.addEventListener('DOMContentLoaded', () => {
    if (chatIntegrationType === "widget") {
      const chatContainer = document.getElementById('shop-ai-chat-container');
      if (chatContainer) {
        document.body.appendChild(chatContainer);
      }
    }
  });
</script>

{% schema %}
{
  "name": "AI Chat Assistant",
  "target": "section",
  "settings": [
    {
      "id":"env",
      "type":"select",
      "label": "Type d'environement",
      "options": [
        {
          "value": "production",
          "label": "production",
        },
        {
          "value": "dev",
          "label": "dev",
        }
      ],
      "default": "dev"
    },
    {
      "type": "color",
      "id": "chat_widget_color",
      "label": "Chat Widget Color",
      "default": "#5046e4"
    },
    {
      "type": "select",
      "id": "chat_integration_type",
      "label": "Integration type",
      "options": [
        {
          "value": "widget",
          "label": "Widget"
        },
        {
          "value": "section",
          "label": "Section"
        }
      ],
      "default": "widget"
    },
    {
      "type": "text",
      "id": "welcome_message",
      "label": "Welcome Message",
      "default": "ðŸ‘‹ Hi there! How can I help you today?"
    }
  ]
}
{% endschema %}
